<h2>Your Cart</h2>session id: <%= session[:cart_id]%>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Total Price</th>
  </tr>
  <% @line_items.each do |item| %>
      <tr>
        <td>
          <%= item.product.title %>
          <%= link_to "remove", line_item_path(item), method: :delete,
                      title: "Click to remove this item",
                      data: {confirm: 'Are you sure?' }, class: "btn btn-info btn-xs" %></td>
        <td><%= item.quantity %> </td>
        <td><%= number_to_currency(item.unit_price, :locale => 'en-GB') %></td>
        <td><%= number_to_currency(item.total_price, :locale => 'en-GB') %></td>
      </tr>
  <% end %>
  <tr>
      <td colspan="3">Total</td>
      <td><%= number_to_currency(@cart.line_items_total, :locale => 'en-GB') %></td>
  </tr>
</table>
<%= link_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger active", role: "button" %>
<%= link_to 'Continue Shopping', root_path, role: "button", class: "btn btn-primary active" %>
<%= link_to "Checkout", new_order_path, role: "button", class: "btn btn-success active" %>

