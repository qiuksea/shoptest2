<%= form_tag(line_items_path, remote: true, class: "form-inline") do -%>
    <div class="form-group">
      <label for="quantity">Quantity</label>
      <%= select_tag "product_quantity", options_for_select((1..15).to_a, 1)%>
      <%= hidden_field_tag 'product_id',  @product.id %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Add to Cart', class: "btn btn-success" %><!-- , disabled: @product.product_stock >0 ? false:true -->
    </div>
<% end -%>

