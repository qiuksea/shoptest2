<h1>Product Categories</h1>

<table  class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody id="categories">
    <%= render @product_categories %>
  </tbody>
</table>
<div class="well">
    <%= link_to 'New', new_admin_product_category_path,  remote: true, class: "btn btn-primary active" %>
</div>
<%= render :partial => "category_modal", :locals => {:heading => "Product Category"} %>