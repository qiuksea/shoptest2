<p id="notice"><%= notice %></p>

<h1>Listing Admin Product Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td><%= link_to 'Show', [:admin, product_category] %></td>
        <td><%= link_to 'Edit', edit_admin_product_category_path(product_category) %></td>
        <td><%= link_to 'Destroy', [:admin, product_category] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product category', new_admin_product_category_path %>
