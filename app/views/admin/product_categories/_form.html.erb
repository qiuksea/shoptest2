<%= simple_form_for [:admin, @product_category], remote: true do |f| %>
  <%#= f.error_notification %>
    <!--<div id="error_explanation" class="bg-danger text-danger">-->
    <!--</div>-->

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, @product_category.new_record? ? "Create" : "Update", :class=> "btn btn-primary" %>
    <!--<a class="btn btn-default" data-dismiss="modal" href="#">Cancel</a>-->
    <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
  </div>
<% end %>
