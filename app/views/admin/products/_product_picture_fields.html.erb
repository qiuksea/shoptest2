<fieldset>
    <% if f.object.new_record? %>
        <%= f.label :image, "Upload" %>
        <%= f.file_field :image, as: :file %>
    <% else %>
        <%= display_image_file(f.object) %>
        <%= f.hidden_field :_destroy %>
        <%= link_to "remove", '#', class: "remove_fields" %><br />
    <% end %>
</fieldset>

